<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/media_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/media_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/media_main_image"
            android:layout_alignParentStart="true"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/media_user_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_below="@id/media_main_image"
            android:layout_toEndOf="@id/media_user_image"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Dudu Cohen"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/media_user_comments"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_below="@id/media_user_name"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Comments: 5"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>